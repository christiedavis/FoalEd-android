<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.abc.foaled.fragments.HorsePregnancyFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Pregnancy"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/conceptionDate"
                android:layout_alignParentStart="true"
                android:text="Conception Date" />

            <TextView
                android:id="@+id/conceptionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingBottom="24dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/birthDate"
                android:layout_alignParentStart="true"
                android:text="Expected Birth Date" />

            <TextView
                android:id="@+id/birthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/conceptionDate"
                android:paddingBottom="24dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/horseName"
                android:layout_alignParentStart="true"
                android:text="Sire" />

            <TextView
                android:id="@+id/horseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/birthDate"
                android:paddingBottom="16dp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/editPregnancy"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/horseName"
                android:layout_centerHorizontal="true"
                android:text="Edit Pregnancy" />


            <Button
                android:id="@+id/giveBirth"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editPregnancy"
                android:layout_centerHorizontal="true"
                android:text="Give Birth" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>

