<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abc.foaled.fragments.AddFoalFragment"
    android:background="@color/cardview_light_background"
    android:id="@+id/add_foal_fragment">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/cardview_light_background"
        >
        <!-- TODO: do view stuff -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Your having a baby - you can edit this information later"
            android:id="@+id/add_pregnancy_fragment_text"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Whats its name?" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/news_foal_name_textView"
            android:hint="Foals name"
            />

        <Button android:id="@+id/add_foal_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add foal"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:onClick="cancel"/>

    </LinearLayout>
</FrameLayout>
