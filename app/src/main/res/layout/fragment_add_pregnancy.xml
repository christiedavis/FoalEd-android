<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abc.foaled.Fragment.AddPregnancyFragment"
    android:background="@color/cardview_light_background"
    android:id="@+id/add_pregnancy_fragment">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/cardview_light_background"
        >
    <!-- TODO: do view stuff -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Congratulations on your new pregnancy"
        android:id="@+id/add_pregnancy_fragment_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Father" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fathers_name_textView"
            />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Date of conception"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_of_conception"
            android:text="Now"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Date"
            android:onClick="ChooseDate"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add pregnancy"
            android:onClick="AddPregnancy"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:onClick="Cancel"/>

    </LinearLayout>

</FrameLayout>
