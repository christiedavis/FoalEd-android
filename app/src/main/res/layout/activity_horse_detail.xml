<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/horse_detail_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/dim_effect"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.abc.foaled.activities.HorseDetailActivity">

    <android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>
    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_horse_detail"/>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/multiple_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        fab:fab_addButtonColorNormal="@color/colorAccent"
        fab:fab_addButtonColorPressed="@color/colorAccentLight"
        fab:fab_addButtonPlusIconColor="#FFFFFF"
        fab:fab_labelStyle="@style/menu_labels_style">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/delete_horse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="deleteHorse"
            android:src="@mipmap/ic_bin_white"
            fab:fab_colorNormal="#e81e1e"
            fab:fab_colorPressed="#ef1e1e"
            fab:fab_title="Delete"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_pregnancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNewPregnancyFragment"
            android:src="@drawable/ic_menu_pregnancy"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorAccentLight"
            fab:fab_title="Add pregnancy"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/give_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="giveBirth"
            android:src="@drawable/ic_menu_pregnancy"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorAccentLight"
            fab:fab_title="Give birth"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</android.support.design.widget.CoordinatorLayout>