<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.abc.foaled.Activity.HorseDetailActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.AppBarLayout>

        <include
                layout="@layout/view_horse_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"  />

    <Button
        android:text="Add Pregnancy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_add_pregnancy" />

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:id="@+id/horse_only_note">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@color/cardview_dark_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horse_only_note_title"
                android:textColor="#000000"
                android:paddingTop="10sp"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:paddingBottom="10sp"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/horse_only_note_content"
                android:paddingTop="10sp"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:paddingBottom="10sp"
                android:textColor="#000000" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/horseDetailNotes"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>



