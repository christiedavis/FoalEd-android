<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <View
        android:id="@+id/horizontalBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FF000000"
        android:layout_above="@+id/add_horse_buttons"/>

    <LinearLayout
        android:id="@+id/add_horse_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="insert"
            android:text="SAVE"
            android:textAlignment="center"/>

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#FF000000" />

        <Button
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="cancel"
            android:text="CANCEL"
            android:textAlignment="center" />
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_add_new_horse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/horizontalBar"
        android:isScrollContainer="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="selectPhoto">

                <ImageView
                    android:id="@+id/add_horse_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:contentDescription="Horse Photo"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_horse" />

                <!--TODO make this not be right on the bottom-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_add_a_photo_white_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"/>

            </RelativeLayout>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/add_horse_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <TableLayout
                    android:id="@+id/add_horse_table_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="25dp"
                    android:layout_marginStart="25dp">

                    <!--HORSE NAME-->
                    <TableRow android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:labelFor="@+id/horseName"
                            android:text="Name"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/horseName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:hint="Name of Horse"
                            android:imeOptions="actionDone|flagNoExtractUi"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLines="1" />
                    </TableRow>

                    <!--AGE-->
                    <TableRow android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Age"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <TextView
                            android:id="@+id/newHorseAge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="0"
                            android:onClick="selectAge" />
                    </TableRow>

                    <!--SIRE'S NAME-->
                    <TableRow
                        android:id="@+id/siresNameRow"
                        android:layout_marginBottom="10dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:labelFor="@+id/siresName"
                            android:text="Sire"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/siresName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:hint="Sire's name"
                            android:imeOptions="actionNext|flagNoExtractUi"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLines="1" />
                    </TableRow>

                    <!--DAM-->
                    <TableRow
                        android:id="@+id/damNameRow"
                        android:layout_marginBottom="10dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:labelFor="@+id/siresName"
                            android:text="Dam"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/damsName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:hint="Dam's name"
                            android:imeOptions="actionNext|flagNoExtractUi"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLines="1" />
                    </TableRow>

                    <!--BREED-->
                    <TableRow
                        android:id="@+id/breedROW"
                        android:layout_marginBottom="10dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:labelFor="@+id/siresName"
                            android:text="Breed"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/breed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:hint="Breed"
                            android:imeOptions="actionNext|flagNoExtractUi"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLines="1" />
                    </TableRow>

                    <!--COLOUR-->
                    <TableRow
                        android:id="@+id/colourROW"
                        android:layout_marginBottom="10dp"
                        android:paddingBottom="5dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:labelFor="@+id/siresName"
                            android:text="Colour"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <EditText
                            android:id="@+id/colour"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:hint="Colour"
                            android:imeOptions="actionDone|flagNoExtractUi"
                            android:inputType="textPersonName|textCapWords"
                            android:maxLines="1" />
                    </TableRow>
                </TableLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>