<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/add_horse_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="1"
            android:text="SAVE"
            android:onClick="insert"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#FF000000" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="CANCEL"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"/>
    </LinearLayout>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_horse_buttons"
        android:isScrollContainer="true"
        android:id="@+id/content_add_new_horse">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/add_horse_image"
                android:onClick="selectPhoto"
                android:scaleType="centerCrop"
                android:contentDescription="Horse Photo"/>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true"
                android:id="@+id/add_horse_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/add_horse_table_layout">
                    <!--HORSE NAME-->
                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Name"/>
                        <EditText
                            android:id="@+id/add_new_horse_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Name of Horse"/>
                    </TableRow>
                    <!--DATE OF BIRTH-->
                    <!--TODO Make sizes consistent-->
                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Date of Birth"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/newHorseDOB"

                            android:onClick="selectDate"/>
                    </TableRow>
                    <!--SEX-->
                    <TableRow>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Female?"/>

                        <!--TODO align checkbox in middle of view?-->
                        <CheckBox
                            android:id="@+id/checkboxSex"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:checked="false"
                            android:onClick="toggleSex"/>
                    </TableRow>
                    <!--PREGNANT-->
                    <TableRow
                        android:id="@+id/pregnantRow"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Pregnant?"/>

                        <CheckBox
                            android:id="@+id/checkboxPregnant"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:checked="false"
                            android:onClick="togglePregnant"/>
                    </TableRow>
                    <!--CONCEPTION DATE-->
                    <TableRow
                        android:id="@+id/conceptionRow"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:text="Conception Date?"/>

                        <EditText
                            android:id="@+id/random"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="1"
                            android:checked="false"/>
                    </TableRow>
                </TableLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>

